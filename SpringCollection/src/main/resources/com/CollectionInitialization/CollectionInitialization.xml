<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
 	<bean id="triangle" class="com.CollectionInitialization.Triangle" >
 		<property name="points">
 			<list>
 				<ref bean="point1" />
 				<ref bean="point2" />
 				<ref bean="point2" />
 			</list>
 		</property>
 		
 	</bean> 
 	
 	<bean id="point1" class="com.CollectionInitialization.Point" >
 		<property name="x" value="0"></property>
 		<property name="y" value="10"></property>
 	</bean>
 	
 	<bean id="point2" class="com.CollectionInitialization.Point">
 		<property name="x" value="20" ></property>
 		<property name="y" value="30"></property>
 	</bean>
 	
 	<bean id="point3" class="com.CollectionInitialization.Point">
 		<property name="x" value="40" ></property>
 		<property name="y" value="50"></property>
 	</bean>
 </beans>